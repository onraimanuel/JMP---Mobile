<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateMahasiswaActivity">

    <LinearLayout
        android:id="@+id/layt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/reds">

        <ImageButton
            android:id="@+id/backdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/reds"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAIL DATA MAHASISWA"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_below="@id/layt"
        android:padding="20dp">

        <EditText
            android:id="@+id/nomor"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/reds_border"
            android:drawableLeft="@drawable/ic_baseline_apps_24"
            android:drawablePadding="8dp"
            android:hint="Nomor"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/reds_border"
            android:drawableLeft="@drawable/ic_baseline_account_box_24_red"
            android:drawablePadding="8dp"
            android:hint="Nama"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/tanggal"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/reds_border"
            android:drawableLeft="@drawable/ic_baseline_app_registration_24"
            android:drawablePadding="8dp"
            android:hint="Tanggal"
            android:inputType="none"
            android:padding="8dp"
            android:focusable="false"
            android:onClick="showDatePickerDialog"/>

        <EditText
            android:id="@+id/jk"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/reds_border"
            android:drawableLeft="@drawable/ic_baseline_account_box_24_red"
            android:drawablePadding="8dp"
            android:hint="Jenis Kelamin ( L atau P )"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/alamat"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/reds_border"
            android:drawableLeft="@drawable/ic_baseline_account_box_24_red"
            android:drawablePadding="8dp"
            android:hint="Alamat"
            android:padding="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_add_box_24"
        android:text=" Update"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_margin="22dp"
        android:textColor="@color/white"
        android:background="@color/reds"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:cornerRadius = "30dp"/>



</RelativeLayout>
